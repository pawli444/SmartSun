<Window x:Class="Projekt_IO.MWM.View.AddPlant"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        mc:Ignorable="d" 
        Title="Dodaj roślinę"
        Height="400" Width="350"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="Transparent">

    <Window.Resources>
        <FontFamily x:Key="CustomFont">Plus Jakarta Sans</FontFamily>
        
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <Path Data="M 0,0 L 10,10 M 0,10 L 10,0"
                                  Stroke="Black"
                                  StrokeThickness="2"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AddButton" TargetType="Button">
            <Setter Property="Background" Value="#FF0D8A6A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF0A6B52"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="UploadButton" TargetType="Button">
            <Setter Property="Background" Value="#DDDDDD"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White" 
            CornerRadius="20" 
            BorderBrush="#1c1c1c"
            MouseDown="Window_MouseDown"
            Margin="10">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0">
                <TextBlock Text="Dodaj roślinę"
                         FontFamily="{StaticResource CustomFont}"
                         FontSize="24"
                         FontWeight="SemiBold"
                         HorizontalAlignment="Center"
                         Margin="0,0,0,20"/>
                <Button Style="{StaticResource CloseButtonStyle}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Click="OnCloseClick"/>
            </Grid>

            <!-- Content with ScrollViewer -->
            <ScrollViewer Grid.Row="1" Margin="0,20" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <TextBlock Text="*Nazwa rośliny"
                             Margin="0,0,0,5"
                             FontSize="14"
                             FontFamily="{StaticResource CustomFont}"/>
                    <TextBox Height="40"
                             Background="#F5F5F5"
                             BorderThickness="0"
                             Padding="10,0"
                             Width="260"
                             HorizontalAlignment="Left"
                             Margin="0,0,0,20"/>

                    <TextBlock Text="Zdjęcie"
                             Margin="0,0,0,5"
                             FontSize="14"
                             FontFamily="{StaticResource CustomFont}"/>
                    <Button Style="{StaticResource UploadButton}"
                            Content="Dodaj z komputera"
                            FontFamily="{StaticResource CustomFont}"
                            Click="OnUploadClick"
                            Width="200"
                            Margin="0,0,0,20"/>

                    <!-- Image Preview Area -->
                    <Border Height="150"
                            Background="#F5F5F5"
                            CornerRadius="8"
                            Width="260"
                            Margin="0,0,0,20">
                        <Image x:Name="PreviewImage"
                               Stretch="Uniform"
                               Margin="10"/>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Button Grid.Row="2"
                    Content="Dodaj"
                    FontFamily="{StaticResource CustomFont}"
                    Style="{StaticResource AddButton}"
                    Click="OnAddClick"/>
        </Grid>
    </Border>
</Window>
